package embox.util

/*
   Modules here are true libraries without init functions.
   So it's safe and natural to have it static
*/

static module priolist {
	source "priolist.c"
}

@DefaultImpl(SListDebug)
abstract module SList {
}
static module SListDebug extends SList {
//	source "slist_debug.c"
//	source "slist_impl.h"
}
static module SListNDebug extends SList {
//	source "slist_ndebug.h"
//	source "slist_impl.h"
}

static module log {
	option number log_level_default=3
	option number log_level_max=4

	source "log.c"

	@IncludeExport(path="util")
	source "log.h"

	depends embox.lib.printk
}

static module ring {
	source "ring.c"
	source "ring_buff.c"
}

static module LibUtil {
	depends log
	depends ring
	depends tree

	depends Array
	depends dlist
	depends SList
	depends Bit
}

static module tree {
	source "tree.c"
}

static module indexator {
	source "indexator.c"

	depends embox.compat.libc.assert
	depends embox.compat.libc.stdlib.core
	depends embox.compat.libc.str
}

static module pretty_print {
	@IncludeExport(path="util")
	source "pretty_print.h"

	source "pretty_print.c"
}
