
package embox.cmd

@AutoCmd
@Cmd(name = "sleep",
	help = "sleep for specified msec num",
	man = '''
		NAME
			sleep - sleep for specified number of microseconds.
		SYNOPSIS
			sleep MSEC
		DESCRIPTION

		AUTHOR
			Anton Kozlov
	''')
module sleep {
	@IncludePath("$(SRC_DIR)/compat/posix/include")
	source "sleep.c"

	depends embox.compat.libc.stdio.printf
	depends embox.compat.libc.stdlib.core       /* atol   */
	depends embox.compat.posix.util.sleep       /* usleep */
}
