package embox.cmd.testing

@AutoCmd
@Cmd(name = "thread_priority",
     help = "Run threads at different priorities",
     man  = '''
     	NAME
		thread_priority - manual test for threads
	SYNOPSIS
	DESCRIPTION
		manual test for threads
	OPTIONS
	AUTHORS
		kpishere
	''')
module thread_priority_test {
	option number log_level=4
	option number threads_quantity=3
	source "thread_priority_test.c"

	depends embox.kernel.thread.core
	depends embox.framework.LibFramework
}

@AutoCmd
@Cmd(name = "stack_protect",
     help = "Run threads and test stack exception handler",
     man  = '''
     	NAME
		stack_protect - manual test for threads and stack protect
	SYNOPSIS
	DESCRIPTION
		manual test for threads and stack protect
	OPTIONS
	AUTHORS
		kpishere
	''')
module stack_protect_test {
	option number log_level=4
	source "stack_protect_test.c"

	depends embox.kernel.thread.stack_protect
	depends embox.kernel.thread.core
	depends embox.framework.LibFramework
}