package embox.net

module tcp_sock {
	source "tcp_sock.c"
	option number amount_tcp_sock=20
	option number amount_tcp_port=65536

	depends route
	depends sock
	depends embox.compat.posix.net.inet_addr
	depends embox.lib.LibC
	depends embox.mem.pool
	depends embox.framework.LibFrameworkNet
}

module udp_sock {
	source "udp_sock.c"
	option number amount_udp_port=65536

	depends udp
	depends sock
	depends route
	depends ipv4 /* for ip_output.c */
	depends skbuff
	depends embox.lib.LibC
	depends embox.mem.pool
	depends embox.framework.LibFrameworkNet
}

module raw_sock {
	/* FIXME:
	 * 1.it depends from icmp
	 * 2.it depends from ip
	 * 3.it depends from udp
	 */
	source "raw_sock.c"

	depends skbuff
	depends sock
	depends embox.lib.LibC
	depends embox.mem.pool
	depends embox.framework.LibFrameworkNet
}

module af_inet {
	source "af_inet.c"
	option number amount_inet_sock=20

	depends sock
	depends embox.util.indexator
	depends embox.framework.LibFrameworkNet
}

module af_packet {
	source "af_packet.c"
	option number amount_sockets=20

	depends sock
	depends embox.framework.LibFrameworkNet
}

module af_unix {
	source "af_unix.c"

	depends sock
	depends embox.framework.LibFrameworkNet
}

module socket {
	source "ksocket.c"
	option number connect_timeout=5000

	depends embox.kernel.task.io_sync
	depends embox.lib.LibCString
	depends embox.net.sock
}
