package embox.net

module tcp_sock {
	source "tcp_sock.c"
	option number amount_tcp_sock=20

	depends route
	depends sock
	depends embox.compat.posix.net.inet_addr
	depends embox.lib.LibC
	depends embox.mem.pool
	depends embox.framework.LibFrameworkNet
}

module udp_sock {
	source "udp_sock.c"
	option number amount_udp_sock=20

	depends udp
	depends sock
	depends route
	depends ipv4 /* for ip_output.c */
	depends skbuff
	depends embox.lib.LibC
	depends embox.mem.pool
	depends embox.framework.LibFrameworkNet
}

module raw_sock {
	/* FIXME:
	 * 1.it depends from icmp
	 * 2.it depends from ip
	 * 3.it depends from udp
	 */
	source "raw_sock.c"
	option number amount_raw_sock=20

	depends skbuff
	depends sock
	depends embox.lib.LibC
	depends embox.mem.pool
	depends embox.framework.LibFrameworkNet
}

module af_inet {
	source "af_inet.c"
	depends sock
	depends embox.framework.LibFrameworkNet

	source "ip_port.c"
	option number ports_per_protocol=65536
	depends embox.util.Bit
}

module af_packet {
	source "af_packet.c"
	option number amount_sockets=20

	depends sock
	depends socket /* for socket_repo.c */
	depends embox.framework.LibFrameworkNet
}

module af_unix {
	source "af_unix.c"

	depends sock
	depends socket /* for socket_repo.c */
}

module socket {
	source "ksocket.c"
	depends embox.arch.interrupt
	depends embox.mem.pool
	depends embox.lib.LibC
	depends embox.framework.LibFrameworkNet
	/* depends from socket_registry.c */

	source "socket_registry.c"
	option number amount_socket_node=20
	depends embox.mem.pool
	depends embox.lib.LibC
	depends embox.util.LibUtil
}
