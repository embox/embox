package embox.net

module core {
    @IncludePath("$(SRC_DIR)/compat/linux/include")
    @IncludePath("$(SRC_DIR)/compat/posix/include")
	source "devinet.c", "sock.c", "skbuff.c"
	depends embox.net.dev, embox.net.util, embox.mem.slab
}

module dev {
    @IncludePath("$(SRC_DIR)/compat/linux/include")
    @IncludePath("$(SRC_DIR)/compat/posix/include")
	source "network_layer.c", "dev.c"
	depends entry_api
	depends embox.compat.linux.LibLinux
}

abstract module entry_api {

}

module net_entry extends entry_api{
    @IncludePath("$(SRC_DIR)/compat/linux/include")
    @IncludePath("$(SRC_DIR)/compat/posix/include")
	source "net_entry.c"
}

module neighbour {
    @IncludePath("$(SRC_DIR)/compat/linux/include")
    @IncludePath("$(SRC_DIR)/compat/posix/include")
	source "neighbour.c"
}
