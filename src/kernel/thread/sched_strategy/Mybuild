package embox.kernel.thread.sched_policy

@DefaultImpl(nosched)
abstract module api {
}

module nocontext extends embox.arch.context {
	source "nocontext.h"
}

module nosched extends api {
	source "nosched.h"
	depends embox.kernel.thread.current.api
	depends nocontext
}

module simple_queue extends api {
	source "simple_queue.c", "simple_queue.h"

	option number tick_interval = 100

	depends embox.kernel.thread.sched_policy.queue.api
}



module fixedtime extends api {
	source "fixedtime_sched.c", "fixedtime_sched.h"

	option number msec_priority_multiplier = 1
}

/* Meta modules for compatibility. Remove them? */
module priority_based {
	depends embox.kernel.thread.sched_policy.simple_queue
	depends embox.kernel.thread.sched_policy.queue.prioq
}

module priority_based_smp {
	depends embox.kernel.thread.sched_policy.simple_queue
	depends embox.kernel.thread.sched_policy.queue.prioq2
}

module trivial {
	depends embox.kernel.thread.sched_policy.simple_queue
	depends embox.kernel.thread.sched_policy.queue.list
}
