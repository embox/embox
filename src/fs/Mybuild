package embox.fs

module node {
	source "node.c"
	make flags "-I$(SRC_DIR)/compat/posix/include"
	make flags "-I$(SRC_DIR)/compat/linux/include"
}

module file_desc {
	source "file_desc.c"
	make flags "-I$(SRC_DIR)/compat/posix/include"
}

module rootfs {
	source "rootfs.c"
	depends core
	make flags "-I$(SRC_DIR)/compat/posix/include"
}

module core {
	source "file.c"
	source "vfs.c"
	source "fs.c"
	depends file_desc
	depends node
	depends embox.fs.driver.repo
	depends embox.kernel.task_api
	make flags "-I$(SRC_DIR)/compat/posix/include"
}
