package third_party.lib

@BuildArtifactPath(cppflags_before="-include $(ROOT_DIR)/third-party/lib/toolchain/newlib_compat/ctype.h")
@BuildArtifactPath(cppflags="$(shell $(ROOT_DIR)/third-party/lib/toolchain/libstdcxx_toolchain/c++_headers_finder.sh \"$(AWK)\")")
static module libstdcxx_toolchain extends embox.lib.LibCxx {
	@Rule(script="$(CP) \"$$($(EMBOX_GCC) -print-file-name=libstdc++.a | sed $$'s/\r$$//')\" $(OBJ_DIR)/third-party/lib/toolchain/libstdcxx_toolchain")
	source "libstdc++.a"

	@Rule(script="$(CP) \"$$($(EMBOX_GCC) -print-file-name=libsupc++.a | sed $$'s/\r$$//')\" $(OBJ_DIR)/third-party/lib/toolchain/libstdcxx_toolchain")
	source "libsupc++.a"

	source "stubs.c"

	@NoRuntime depends third_party.lib.newlib_compat.errno
	@NoRuntime depends third_party.lib.newlib_compat.locale
	@NoRuntime depends third_party.lib.newlib_compat.reent
	@NoRuntime depends third_party.lib.newlib_compat.xpg_strerror_r
}
